<table class='table table-hover'>
  <thead>
    <tr>
      <th>Seen At</th>
      <th>Location</th>
      <th>Description</th>
      <th>Height (cm)</th>
      <th>Weight (kg)</th>
      <th>BMI</th>
    </tr>
  </thead>
  <tbody>
    {{#each model}}
      {{#link-to 'sightings.show' this tagName="tr"}}
        <td>{{format-date seenAt}}</td>
        <td>{{location}}</td>
        <td>{{description}}</td>
        <td>{{height}}</td>
        <td>{{weight}}</td>
        <td>{{bmi}}</td>
      {{/link-to}}
    {{/each}}
  </tbody>
</table>
