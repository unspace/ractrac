<form role="form" {{action 'save' model on='submit'}}>
  <div class="form-group">
    <label for="location">Location</label>
    {{input value=location class='form-control' placeholder='Enter Location'}}
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    {{input value=description class='form-control' placeholder='Enter Description'}}
  </div>
  <div class="form-group">
    <label for="height">Height</label>
    {{input value=height class='form-control' placeholder='Enter Height' type='number'}}
  </div>
  <div class="form-group">
    <label for="weight">Weight</label>
    {{input value=weight class='form-control' placeholder='Enter Weight' type='number'}}
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>
